<div class="related-discussion">
    <div class="related-discussion-date">
        {{ relatedDiscussionData.date }}
    </div>
    <h4 class="related-discussion-title">
        {{ relatedDiscussionData.title | default('RELATED RESOURCE TITLE') }}
    </h4>
    <div class="related-discussion-tags grid-block">
        {% for tag in relatedDiscussionData.tags %}
            <a class="discussion-tag grid-item" href="{{ tag.url|default('') }}">{{ tag.label }}</a>
        {% endfor %}
        <span class="discussion-tag grid-item-last"><a href="#"></a></span>
    </div>
</div>
