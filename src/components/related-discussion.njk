<div class="related-discusssion">
    <div class="related-discusssion-date">
        {{ relatedDiscussionData.date }}
    </div>
    <h4 class="related-discusssion-title">
        {{ relatedDiscussionData.title | default('RELATED RESOURCE TITLE') }}
    </h4>
    <div class="related-discusssion-tags">
        {% for tag in relatedDiscussionData.tags %}
            <a class="discusssion-tag" href="{{ tag.url|default('') }}">{{ tag.label }}</a>
        {% endfor %}
    </div>
</div>
